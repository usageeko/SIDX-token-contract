contract SIDX is ERC20, Ownable {
    constructor() ERC20("SID Coin", "SIDX") Ownable(msg.sender) {
        _mint(msg.sender, 2_800_000_000 * 10 ** decimals());
    }

    function burn(uint256 amount) public {
        _burn(msg.sender, amount);
    }
}
